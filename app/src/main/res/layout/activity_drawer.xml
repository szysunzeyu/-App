<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:paddingRight="45dp"
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_marginTop="200dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">
                <LinearLayout
                    android:id="@+id/buslistener"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="centerInside"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/bus"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dip"
                        android:layout_marginTop="10dp"
                        android:text="公交车线路查询"
                        android:textSize="15sp" />
                </LinearLayout>
            <LinearLayout
                android:id="@+id/shouce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerInside"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/book"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dip"
                    android:layout_marginTop="10dp"
                    android:text="使用指南"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dimgrey"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:scaleType="centerInside"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/ptmap" />
                    <RadioButton

                        android:layout_marginStart="20dip"
                        android:textSize="15sp"
                        android:id="@+id/normal_map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="普通地图" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:scaleType="centerInside"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/gpsmap"/>
                <RadioButton
                    android:layout_marginStart="20dip"
                    android:textSize="15sp"
                    android:id="@+id/gps_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="卫星地图" />
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dimgrey"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:scaleType="centerInside"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/cityhot"/>
                <CheckBox
                    android:layout_marginStart="20dip"
                    android:textSize="15sp"
                    android:id="@+id/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="开启城市热力图" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:scaleType="centerInside"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/gonglu"/>
                <CheckBox
                    android:layout_marginStart="20dip"
                    android:textSize="15sp"
                    android:id="@+id/checkBox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="开启实时路况图" />
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dimgrey"/>

            <LinearLayout
                android:id="@+id/guanyu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/guanyu" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dip"
                    android:layout_marginTop="10dp"
                    android:text="联系我"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/exit" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dip"
                    android:layout_marginTop="10dp"
                    android:text="退出"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>